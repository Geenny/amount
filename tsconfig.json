{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"target": "es6",
		"module": "es6",
		"lib": ["es2017", "dom"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"elecir/*": ["src/elecir/*"],
			"app/*": ["src/app/*"],
		}
	},
	"files": [
		"src/index.ts"
	],
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}